{% block valantic_oci_users_list_page %}
    <sw-page class="valantic-oci-users-list">
        <template slot="smart-bar-actions">
            <sw-button variant="primary" :router-link="{ name: 'valantic.oci.users_create' }">
                {{ $tc('valantic-oci.list.createButton') }}
            </sw-button>
        </template>
        <template slot="content">
            <sw-entity-listing
                v-if="ociUsers"
                :items="ociUsers"
                :repository="repository"
                :showSelection="false"
                :columns="columns"
                detailRoute="valantic.oci.users_edit"
            >
                <template #column-customer="{ item }">
                    {{ item.customer.firstName}} {{ item.customer.lastName  }}
                </template>
            </sw-entity-listing>
        </template>
    </sw-page>
{% endblock %}
